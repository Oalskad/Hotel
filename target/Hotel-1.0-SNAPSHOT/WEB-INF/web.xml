<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>language</param-name>
        <param-value>Vietnamese</param-value>
    </context-param>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/Access/*</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>BookController</servlet-name>
        <servlet-class>Controller.BookController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookController</servlet-name>
        <url-pattern>/Book/*</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>HomePageController</servlet-name>
        <servlet-class>Controller.HomePageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePageController</servlet-name>
        <url-pattern>/HomePage/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RoomDetailController</servlet-name>
        <servlet-class>Controller.RoomDetailController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoomDetailController</servlet-name>
        <url-pattern>/RoomDetailController</url-pattern>
    </servlet-mapping>
    
    
     <servlet>
        <servlet-name>ReviewControler</servlet-name>
        <servlet-class>Controller.ReviewControler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReviewControler</servlet-name>
        <url-pattern>/ReviewControler/*</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>UserProfileController</servlet-name>
        <servlet-class>Controller.UserProfileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserProfileController</servlet-name>
        <url-pattern>/Profile/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>Controller.SearchController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/SearchController</url-pattern>
    </servlet-mapping>
    
    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>HomePage</welcome-file>
    </welcome-file-list>
</web-app>
